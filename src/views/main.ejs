    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    
    <script src="./js/special_effects.js"></script>

